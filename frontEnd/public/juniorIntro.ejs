<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Introduction</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Raleway:wght@400;600&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="styles/navbar.css" />
  <link rel="stylesheet" href="styles/theme.css" />
  <link rel="stylesheet" href="styles/introduction.css">
</head>

<body>
  <%- include("partials/nav-up.ejs") %>
  <div class="page-content">

    <!-- add page content here -->
    <h1 class="main_heading">Introduction</h1>
    <% for(var i=0;i<len;i++){ %>
    <div class="center">
      <div class="front-face">
        <div class="contents front">
          <p>
            <%= data[i].name%></p>
          <span><%= data[i].image%></span>
        </div>
      </div>
      <div class="back-face">
        <div class="contents back">
          <h2>
            <%= data[i].hobbies%></h2>
          <span>Follow Me</span>
          <div class="icons">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-linkedin-in"></i>
          </div>
        </div>
      </div>
    </div>



    <% } %>

    <div id="formLink">

      <a href="/form">ADD NEW</a>
    </div>
  </div>
  <%- include("partials/nav-down.ejs") %>
  <script src="scripts/introduction.js"></script>
</body>

</html>